---
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";
---

<Layout title="Home">
	<h1>Home</h1>
	<p id="copyright"></p>
</Layout>	

<script>
	import { getCopyRightYear } from '../lib/utils.ts';
	const year = getCopyRightYear();
	const copyright = document.querySelector('#copyright') as unknown as HTMLParagraphElement;
	copyright.textContent = year.toString();
</script>
